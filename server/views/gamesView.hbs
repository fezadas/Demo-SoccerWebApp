<head>
    {{> head}}
</head>
<body>
    <div class="ui pointing menu">
    <div class="ui container">
        <div class="item"><img src="http://www.lovemarks.com/wp-content/uploads/profile-avatars/default-avatar-soccer-ball.png"></div>
        <a class="item {{#if home}} active {{/if}}" href="/"><i class="home icon"></i> Home</a>
        <a class="item {{#if player}} active {{/if}}" href="/players"><i class="child icon"></i> Players</a>
        {{!--         <a class="item {{#if nextgame}} active {{/if}}" href="/nextgame"><i class="clock outline icon"></i> Next Game</a> --}}
        {{!-- <a class="item {{#if contact}} active {{/if}}" href="/tournaments"><i class="trophy icon"></i>  Tournaments</a> --}}
        
        <div class="right menu">
        </div>

        <div class="right menu">
        {{#if user}}
            <div class="ui item right">
            <div class="ui primary button"><a href="/logout" style="color:white"><i class="sign out icon"></i>Logout</a></div>
        </div>
        {{else}}
        <div class="ui item right">
            <div class="ui primary button"><a href="/login" style="color:white"><i class="sign in icon"></i>Login</a></div>
        </div> 
        {{/if}} 
        </div>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="jquery.barrating.min.js"></script>
<script type="text/javascript">
   $(function() {
      $('#example-fontawesome').barrating({
        theme: 'fontawesome-stars'
      });
   });
</script>



<table class="ui celled padded table">
  <thead>
    <tr><th style="text-align:center">Game Number</th>
    <th style="text-align:center">Date</th>
    <th style="text-align:center">Score</th>
    <th style="text-align:center">Price</th>
    <th style="text-align:center">Comments</th>
    <th style="text-align:center">Weather</th>
  </tr></thead>
  <tbody>
      {{#each rows}}
      <tr>
      <td>
        <h2  class="ui center aligned header">
          <a href="/games/{{id}}">{{id}} </a>
        </h2>
      </td>
      <td style="text-align:center" class="single line">
        {{date}}
      </td>
      <td style="text-align:center">
        {{result}}
      </td>
      <td style="text-align:center" class="right aligned">
        {{price}}€
      </td>
      <td>{{comments}}</td>
      <td><img class="ui avatar image" src={{weatherimg}}><small style="font-weight: bold">{{weather}}</small></td>
    </tr>
      {{/each}}
  </tbody>
</table>  

<div class="ui divider"></div>
<div class="ui divider"></div>

<table class="ui small celled table">
  <thead>
    <tr><th style="text-align:center">Day of the Week</th>
    <th style="text-align:center">Price total</th>
    <th style="text-align:center">Price per person</th>
    <th style="text-align:center">Member's Choice</th>
  </tr></thead>
  <tbody>
      <tr>
      <td style="text-align:center">
        Friday and Weekend
      </td>
      <td style="text-align:center" class="single line">
        30€
      </td>
      <td style="text-align:center">
        2.15€
      </td>
      <td style="text-align:center">
          <i class="star icon"></i><i class="star icon"></i><i class="star icon"></i>
      </td>
    </tr>

    <tr>
      <td style="text-align:center">
        Monday to Thursday
      </td>
      <td style="text-align:center" class="single line">
        40€
      </td>
      <td style="text-align:center">
        2.95€
      </td>
      <td style="text-align:center">
          <i class="star icon"></i><i class="star icon"></i>
      </td>
    </tr>
  </tbody>

</body>