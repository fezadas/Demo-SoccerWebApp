  <style>
.center {
    text-align: center;
}
p.thick {
    font-weight: bold;
}
.slides {
  background: white;
  height: 20rem;
  width: 100%;
  overflow: hidden;
}
.slides .angle {
  color: lightblue;
  cursor: pointer;
  position: relative;
  top: calc(50% - 20px);
  transform: scale(1);
  transition: all .2s ease-in-out;
  z-index: 10;
}
.slides .angle:hover {
  transform: scale(1.7);
}
.slides .angle.right {
  float: right;
  margin-right: 1rem;
}
.slides .angle.left {
  float: left;
  margin-left: 1rem;
}
.slides .slide {
  height: 100%;
  padding: 2rem 5rem;
  transition: all .2s ease-in-out;
}
.slides .slide:not(.active) {
  display: none;
}
.slides .slide.inverted {
  color: white;
}
.slides .slide.shadow {
  text-shadow: 1px 1px 2px black;
}
.slides .slide.image {
  background: url("https://c1.staticflickr.com/8/7371/12387240074_536af0b877.jpg") no-repeat center center fixed;
  background-size: cover;
}
.slides .slide.salmon {
  background: salmon;
}

.faded {
  animation: fade .5s;
}

.blurred {
  animation: blur .4s;
}

@keyframes fade {
  from {
    opacity: 0;
  }
  to {
    opcity: 1;
  }
}
@keyframes blur {
  from {
    filter: blur(5px);
  }
  to {
    filter: blur(0);
  }
}



</style>

